{
  "name": "cap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^4",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-todoapp": "cds watch --open my.todo.todoapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/todo.db"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "password": "alice",
            "roles": ["authenticated-user"]
          },
          "bob": {
            "password": "bob",
            "roles": ["authenticated-user"]
          },
          "admin": {
            "password": "admin",
            "roles": ["authenticated-user", "Admin"]
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
