<mvc:View
    controllerName="my.todo.todoapp.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="loginPage" title="Login">
        <content>
             <VBox class="sapUiSmallMargin">
        <Input id="email" placeholder="Email" value="{login>/email}" type="Email" />
        <Input id="password" placeholder="Password" value="{login>/password}" type="Password" />

        <Button text="Login" press=".onLoginPress" />

        <Button text="Don't have an account? Register instead" type="Transparent" press=".onGoToLogin"/>

      </VBox>
        </content>
    </Page>
 
</mvc:View>
