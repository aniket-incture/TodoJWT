<mvc:View
    controllerName="my.todo.todoapp.controller.Todo"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="todoPage" title="Todos">
        <content>
            <VBox class="sapUiSmallMargin">
        <Input id="title" placeholder="Title..." value="{todo>/title}"/>
      
        <Button text="Add" press=".onCreateTodo" />

      </VBox>

        </content>
    </Page>

</mvc:View>
