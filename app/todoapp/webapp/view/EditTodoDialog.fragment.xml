<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="editDialog" title="Edit Todo" type="Message">
        <VBox class="sapUiSmallMargin">

            <Label text="Title" />
            <Input value="{edit>/title}" />

            <Label text="Completed?" class="sapUiSmallMarginTop" />
            <CheckBox selected="{edit>/isDone}" />

        </VBox>

        <beginButton>
            <Button text="Save" press=".onSaveEdit" />
        </beginButton>

        <endButton>
            <Button text="Cancel" press=".onCancelEdit" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
